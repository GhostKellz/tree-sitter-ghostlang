{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Ghostlang",
  "scopeName": "source.ghostlang",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#variables" },
    { "include": "#constants" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.ghostlang",
          "match": "//.*$"
        },
        {
          "name": "comment.line.double-dash.ghostlang",
          "match": "--.*$"
        },
        {
          "name": "comment.block.ghostlang",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.ghostlang",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.ghostlang",
              "match": "\\\\(?:[\\\\\"'nrtbfav0]|x[0-9a-fA-F]{2}|u[0-9a-fA-F]{4}|U[0-9a-fA-F]{8})"
            }
          ]
        },
        {
          "name": "string.quoted.single.ghostlang",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.ghostlang",
              "match": "\\\\(?:[\\\\\"'nrtbfav0]|x[0-9a-fA-F]{2}|u[0-9a-fA-F]{4}|U[0-9a-fA-F]{8})"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.ghostlang",
          "match": "\\b\\d*\\.?\\d+[eE][+-]?\\d+\\b"
        },
        {
          "name": "constant.numeric.float.ghostlang",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.ghostlang",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.ghostlang",
          "match": "\\b(if|then|else|elseif|while|do|for|in|repeat|until|return|break|continue|end)\\b"
        },
        {
          "name": "keyword.declaration.ghostlang",
          "match": "\\b(var|local|function)\\b"
        },
        {
          "name": "keyword.operator.logical.ghostlang",
          "match": "\\b(and|or|not)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.ghostlang",
          "match": "==|!=|~=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.assignment.ghostlang",
          "match": "\\+=|-=|\\*=|/=|="
        },
        {
          "name": "keyword.operator.arithmetic.ghostlang",
          "match": "\\+\\+|--|\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.logical.ghostlang",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.nullish.ghostlang",
          "match": "\\?\\?|\\?\\.|\\?\\["
        },
        {
          "name": "keyword.operator.concat.ghostlang",
          "match": "\\.\\."
        },
        {
          "name": "keyword.operator.ternary.ghostlang",
          "match": "\\?|:"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.ghostlang",
          "match": "\\b(function)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": { "name": "keyword.declaration.function.ghostlang" },
            "2": { "name": "entity.name.function.ghostlang" }
          }
        },
        {
          "name": "support.function.builtin.ghostlang",
          "match": "\\b(getCurrentLine|getLineText|setLineText|insertText|getAllText|replaceAllText|getCursorPosition|setCursorPosition|getSelection|setSelection|getSelectedText|replaceSelection|getFilename|getFileLanguage|isModified|notify|log|prompt|findAll|replaceAll|split|join|substring|indexOf|replace|createArray|arrayPush|arrayPop|arrayGet|arraySet|arrayLength|tableInsert|tableRemove|tableConcat|createObject|objectSet|objectGet|objectKeys|pairs|ipairs|stringMatch|stringFind|stringGsub|stringUpper|stringLower|stringFormat|map|filter|sort|keys|values|type|tostring|tonumber|print)\\b"
        },
        {
          "name": "entity.name.function.call.ghostlang",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.ghostlang",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.ghostlang",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.ghostlang",
          "match": "\\b(null|nil)\\b"
        }
      ]
    }
  }
}
